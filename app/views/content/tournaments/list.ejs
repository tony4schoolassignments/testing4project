<div class="container">
    <h1>Tournament List</h1>
    <a href="/tournament-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Create a tournament</a>
    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Game</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Size</th>
                        <th scope="col">View</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody id="tournamentList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < tournaments.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= tournaments[count].name %></td>
                            <td><%= tournaments[count].game %></td>
                            <td><%= tournaments[count].startDate %></td>
                            <td><%= tournaments[count].endDate %></td>
                            <td><%= tournaments[count].size %></td>
                            

                            <td class="text-center col-1">
                                <a href=""
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> View</a>
                            </td>

                            <td class="text-center col-1">
                                <a href="/tournament-edit/<%= tournaments[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/tournament-delete/<%= tournaments[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>